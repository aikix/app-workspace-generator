# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.hbs text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Documents
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
*.webp binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# Archives
*.gz binary
*.zip binary
*.7z binary
*.tar binary

# Exclude files from exporting
.github export-ignore
.vscode export-ignore
.idea export-ignore
.gitattributes export-ignore
.gitignore export-ignore
