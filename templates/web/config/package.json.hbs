{
  "name": "{{projectName}}",
  "version": "0.1.0",
  "private": true,
  "description": "{{description}}",
  {{#if author}}
  "author": "{{author}}",
  {{/if}}
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "firebase:setup": "node scripts/firebase-setup.js",
    {{#if linting}}
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    {{/if}}
    {{#if formatting}}
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    {{/if}}
    {{#if (eq testing "playwright")}}
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    {{/if}}
    {{#if gitHooks}}
    "prepare": "husky"
    {{/if}}
  },
  "dependencies": {
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.24.1",
    "firebase": "^12.5.0",
    {{#if (eq firebasePattern "server-first")}}
    "firebase-admin": "^13.6.0",
    {{/if}}
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-slot": "^1.1.1",
    "lucide-react": "^0.469.0"{{#if pwa}},
    "next-pwa": "^5.6.0"{{/if}}{{#if (eq stateManagement "zustand")}},
    "zustand": "^5.0.2"{{/if}}{{#if animations}},
    "framer-motion": "^12.3.0"{{/if}}
  },
  "devDependencies": {
    {{#if typescript}}
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "typescript": "^5.9.3",
    {{/if}}
    {{#if linting}}
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "globals": "^15.14.0",
    {{/if}}
    {{#if formatting}}
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    {{/if}}
    {{#if (eq styling "tailwind")}}
    "@tailwindcss/postcss": "^4.1.17",
    "tailwindcss": "^4.1.17",
    {{/if}}
    {{#if (eq testing "playwright")}}
    "@playwright/test": "^1.56.1",
    {{/if}}
    {{#if gitHooks}}
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "semantic-release": "^24.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    {{/if}}
    "postcss": "^8.4.49"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
